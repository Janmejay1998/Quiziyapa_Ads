<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/theme_header">

        <SwitchPreferenceCompat
            app:key="theme"
            app:title="@string/theme_title" />

    </PreferenceCategory>


    <PreferenceCategory app:title="@string/sound_header">

        <SwitchPreferenceCompat
            app:key="sound"
            app:title="@string/sound_title" />

        <SeekBarPreference
            app:dependency="sound"
            app:key="sound_manage"
            app:title="Game Volume"
            app:summary="Customize Game Volume From Here"
            app:showSeekBarValue="true"/>

    </PreferenceCategory>
    <PreferenceCategory app:title="Contact Us">
        <Preference
            app:key="company"
            app:layout="@layout/company"
            android:selectable="false"/>
        <Preference
            app:key="email"
            app:layout="@layout/email" />
        <Preference
            app:key="share"
            app:layout="@layout/share"/>

    </PreferenceCategory>




</PreferenceScreen>