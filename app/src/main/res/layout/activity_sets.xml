<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="lets.play.quiziyapa.SetsActivity">

    <WebView
        android:id="@+id/gridBg"
        android:layout_width="match_parent"
        android:layout_height="732dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ABar"
            android:elevation="40dp"
            android:minHeight="?attr/actionBarSize" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/henny_penny"
            android:gravity="center"
            android:padding="16sp"
            android:text="LEVELS"
            android:textColor="@android:color/white"
            android:textSize="28sp" />

        <GridView
            android:id="@+id/sets_gridview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:columnWidth="100dp"
            android:padding="16dp"
            android:horizontalSpacing="16dp"
            android:verticalSpacing="16dp"
            android:numColumns="auto_fit"
            android:elevation="40dp"/>

    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/setsAd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:elevation="10dp"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-5870288907912686/9699114288"/>

</RelativeLayout>