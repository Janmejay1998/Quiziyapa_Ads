<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lets.play.quiziyapa.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/woodenbackground"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/trophy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:elevation="10dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/trophy"
            android:translationY="-200dp"
            android:scaleY="0.8"
            android:scaleX="0.8" />

        <ImageView
            android:id="@+id/phatta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleX="1"
            android:scaleY="0.8"
            android:translationY="180dp"
            android:background="@drawable/woodenboard"
            android:layout_above="@+id/s_button"
            />

        <TextView
            android:id="@+id/s_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/s_button"
            android:fontFamily="@font/clicker_script"
            android:gravity="center"
            android:text="5/10"
            android:textColor="@color/textColor"
            android:textSize="32dp"
            android:textStyle="bold"
            android:translationX="-10dp"
            android:translationY="20dp" />

        <Button
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:id="@+id/s_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/phatta"
            android:fontFamily="@font/henny_penny"
            android:scaleX=".7"
            android:scaleY=".5"
            android:text="RePlay"
            android:textColor="#613232"
            android:textSize="50sp"
            android:translationY="80dp"
            />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>